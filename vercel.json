{
  "version": 2,
  "builds": [
    {
      "src": "my-app-name/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "my-app-name/$1"
    }
  ]
}